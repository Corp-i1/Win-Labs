<UserControl x:Class="Win_Labs.Settings.GeneralSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <!-- 
        General Settings Section
        Add new general settings here as needed.
    -->
    <StackPanel>
        <Label Content="Language:" />
        <ComboBox x:Name="LanguageComboBox" Width="150" Margin="0,0,0,10">
            <ComboBoxItem Content="en-UK" />
            <ComboBoxItem Content="wanna translate it?" />
        </ComboBox>
        <Label Content="Max Log Files:" />
        <TextBox x:Name="MaxLogFilesTextBox" Width="60" />
    </StackPanel>
</UserControl>