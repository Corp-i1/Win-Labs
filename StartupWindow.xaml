<local:BaseWindow 
        xmlns:local="clr-namespace:Win_Labs"
        x:Class="Win_Labs.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Startup Menu" 
        Width="200" Height="165"
        Margin="0"
        WindowStartupLocation="CenterScreen"
        BorderThickness="2" 
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Icon="{Binding IconIcoPath, RelativeSource={RelativeSource AncestorType=local:BaseWindow}}">

    <Grid ShowGridLines="False" Background="#222">

        <!-- Define rows for vertical layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <!-- Title row:0 -->
            <RowDefinition Height="Auto" />
            <!-- MasterHead row:1 -->
        </Grid.RowDefinitions>

        <!-- Define columns for vertical layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Main content area -->
        </Grid.ColumnDefinitions>
        <!-- Title Bar -->
        <DockPanel Grid.Row="0" Background="#222">
            <Image x:Name="TitleBarIcon" MouseDown="TitleBarIcon_Click" Width="20" Height="20" Source="\resources\Icons\Win-Labs_Logo-256x256.ico" />
            <Menu VerticalContentAlignment="Center" Background="#222" Width="60">
                <MenuItem Header="Window" Height="25" Width="60" Background="#222" Foreground="LightGray" FontWeight="Bold" ToolTip="Cant change bckround Collor for somereason or foreground">
                    <MenuItem Header="Close" Click="CloseMenuItem_Click" Foreground="LightGray"  Background="#222"/>
                    <Separator Background="DarkSlateBlue" />
                    <MenuItem Header="Other" Foreground="LightGray"  Background="#222"/>
                </MenuItem>
            </Menu>

            <Grid HorizontalAlignment="Right" Background="#222">
                <Image x:Name="Close_Button" MouseDown="CloseButton_Click" Width="20" Height="20" Source="/resources/Icons/Close_Icon_White.png" />
            </Grid>
        </DockPanel>

        <StackPanel Grid.Row="1" Margin="0">
            <Button Content="Create New Playlist" Click="CreateNewPlaylist_Click" Width="Auto" Height="30"/>
            <Button Content="Open Existing Playlist" Click="OpenExistingPlaylist_Click" Width="Auto" Height="30"/>
            <Button Content="Import Existing Playlist" Click="ImportPlaylist_Click" Width="Auto" Height="30"/>
            <Button Content="Settings" Click="Settings_Click" Width="Auto" Height="30"/>
        </StackPanel>
    </Grid>

</local:BaseWindow>