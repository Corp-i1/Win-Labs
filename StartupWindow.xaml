<Window x:Class="Win_Labs.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Startup Menu" MinHeight="150" MinWidth="160" MaxHeight="150" MaxWidth="160"
        Margin="0"
        WindowStartupLocation="CenterScreen"
        BorderThickness="2" 
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.BorderBrush>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Red" Offset="0.0" />
            <GradientStop Color="Orange" Offset="0.17" />
            <GradientStop Color="Yellow" Offset="0.33" />
            <GradientStop Color="Green" Offset="0.5" />
            <GradientStop Color="Blue" Offset="0.67" />
            <GradientStop Color="Indigo" Offset="0.83" />
            <GradientStop Color="Violet" Offset="1.0" />
        </LinearGradientBrush>
    </Window.BorderBrush>

    <Window.Background>
        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
            <GradientStop Color="Red" Offset="0.0" />
            <GradientStop Color="Orange" Offset="0.17" />
            <GradientStop Color="Yellow" Offset="0.33" />
            <GradientStop Color="Green" Offset="0.5" />
            <GradientStop Color="Blue" Offset="0.67" />
            <GradientStop Color="Indigo" Offset="0.83" />
            <GradientStop Color="Violet" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
    </Window.Resources>

    <Grid ShowGridLines="False">

        <!-- Define rows for vertical layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <!-- Title row:0 -->
            <RowDefinition Height="90" />
            <!-- MasterHead row:1 -->
        </Grid.RowDefinitions>

        <!-- Define columns for vertical layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Main content area -->
        </Grid.ColumnDefinitions>
        <!-- Title Bar -->
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="250" LastChildFill="True" Margin="0">
            <Border Background="Transparent" Height="30" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="67*"/>
                        <ColumnDefinition Width="88*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Add Menu to Title Bar -->
                    <Menu Grid.ColumnSpan="2">
                        <Image x:Name="TitleBarIcon" MouseDown="TitleBarIcon_Click" Width="20" Height="20" Source="\resources\Win-Labs_SplashScreen.jpg" RenderTransformOrigin="0.988,0.757" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-7,-1,0,0" />
                        <MenuItem Header="Window" Margin="-5,0,0,0">
                            <MenuItem Header="Close" Click="CloseMenuItem_Click" />
                            <MenuItem Header="Other" />
                        </MenuItem>
                        <Image x:Name="Close_Button" MouseDown="CloseButton_Click" Width="20" Height="20" Source="/resources/Icons/Close_Icon.png" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="42,0,0,0" Stretch="Fill" />


                    </Menu>
                </Grid>
            </Border>
        </DockPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
            <Button Content="Create New Playlist" Click="CreateNewPlaylist_Click" Width="150" Height="30" Background="Transparent" />
            <Button Content="Open Existing Playlist" Click="OpenExistingPlaylist_Click" Width="150" Height="30" Background="Transparent" />
            <Button Content="Import Existing Playlist" Click="ImportPlaylist_Click" Width="150" Height="30" Background="Transparent" />
            
        </StackPanel>
    </Grid>
</Window>