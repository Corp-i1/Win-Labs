<local:BaseWindow 
        xmlns:local="clr-namespace:Win_Labs"
        x:Class="Win_Labs.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings Menu" 
        Height="200" Width="300"
        >

    <Grid Margin="10">
        <StackPanel>
            <Label Content="Theme:" />
            <ComboBox x:Name="ThemeComboBox" Width="150">
                <ComboBoxItem Content="Dark" />
                <ComboBoxItem Content="Light" />
            </ComboBox>

            <Label Content="Language:" Margin="0,10,0,0" />
            <ComboBox x:Name="LanguageComboBox" Width="150">
                <ComboBoxItem Content="en-UK" />
                <ComboBoxItem Content="en-US" />
            </ComboBox>

            <Button Content="Save" Click="SaveButton_Click" Margin="0,20,0,0" Width="80" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</local:BaseWindow>
